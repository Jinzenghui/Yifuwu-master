<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.biac.yifuwu.acknowledgement">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="翼服务-待处理工单"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPeacockBlue"
        android:layout_gravity="top"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="故障消除"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            />

        <RadioGroup
            android:id="@+id/ifsolved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/eliminated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="是"
                android:layout_weight="1"
                />

            <RadioButton
                android:id="@+id/not_eliminated"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="否"
                android:layout_weight="1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="网络制式"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            />

        <RadioGroup
            android:id="@+id/signaltype"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal"
            >

            <RadioButton
                android:id="@+id/is2g"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="2G"
                android:layout_weight="1"
                />

            <RadioButton
                android:id="@+id/is3g"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="3G"
                android:layout_weight="1"
                />

            <RadioButton
                android:id="@+id/is4g"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="4G"
                android:layout_weight="1"
                />

        </RadioGroup>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="问题类型"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            />

        <Spinner
            android:id="@+id/problem_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            />
    </LinearLayout>

    <Button
        android:id="@+id/test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="现场测试"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPeacockBlue"
        android:layout_marginTop="5dp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="经纬度"
                android:background="@drawable/textview_border"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/longitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                />

            <TextView
                android:id="@+id/latitude"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="网络制式"
                android:background="@drawable/textview_border"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/signalstandard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:background="@drawable/textview_border"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="信号质量"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:textSize="16sp"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ECIO"
                android:background="@drawable/textview_border"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/signalquality"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/textview_border"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:paddingLeft="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Ping"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/textview_border"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:paddingLeft="4dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="成功率"
                    android:background="@drawable/textview_border"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/success_rate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="时延"
                    android:background="@drawable/textview_border"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/time_delay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/textview_border"
                    android:textSize="16sp"
                    android:textColor="@color/colorBlack"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    />
            </TableRow>

        </TableLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="备注信息"
        android:gravity="center_horizontal"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:background="@drawable/textview_border"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginTop="4dp"
        />

    <EditText
        android:id="@+id/remark_infomation"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:singleLine="false"
        android:lines="5"
        android:background="@drawable/textview_border"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:id="@+id/listmessage"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        >

        <Button
            android:id="@+id/btnLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="提交"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorPeacockBlue"
            />

        <Button
            android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="保存"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorTurquoise"
            />


        <Button
            android:id="@+id/btnRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="返回"
            android:textSize="20sp"
            android:textColor="@color/colorBlack"
            android:background="@color/colorPeacockBlue"
            />

    </LinearLayout>

</LinearLayout>
